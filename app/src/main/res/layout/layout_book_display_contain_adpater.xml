<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:id="@+id/book_deal_first_layout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/book_deal_first_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_weight="6"/>
        <TextView
            android:id="@+id/book_deal_first_intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/book_deal_first_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/price_yellow"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_weight="2"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/book_deal_second_layout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/book_deal_second_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="6"
            android:scaleType="fitStart"/>
        <TextView
            android:id="@+id/book_deal_second_intro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/book_deal_second_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/price_yellow"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_weight="2"/>
    </LinearLayout>


</LinearLayout>